{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@zuude-ui/video/*": ["../../packages/video/src/*"],
      "@zuude-ui/icons/*": ["../../packages/icons/src/*"],
      "@zuude-ui/cropper/*": ["../../packages/cropper/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "react"
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
